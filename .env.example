
# UpDownVid Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# Server Configuration
PORT=5000
DEBUG=False

# Session & Security (REQUIRED - generate random strings)
SESSION_SECRET=change-this-to-random-secret-key
FLASK_SECRET_KEY=change-this-to-another-random-key

# Google OAuth Configuration (REQUIRED for YouTube upload)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/google_login/callback

# YouTube API (Optional - for automation features)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Application URLs
FRONTEND_URL=http://localhost:5000
BACKEND_URL=http://localhost:5000

# Email/SMTP Configuration (Optional - for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@updownvid.com
CONTACT_EMAIL=support@updownvid.com
COPYRIGHT_EMAIL=copyright@updownvid.com

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# Download Configuration
MAX_FILE_SIZE_MB=500
DOWNLOAD_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Feature Flags
ENABLE_AUTOMATION=true
ENABLE_CONTACT_FORM=true

# Social Links (Optional)
GITHUB_URL=https://github.com/yourusername/updownvid
DISCORD_URL=
TELEGRAM_URL=
TWITTER_URL=
